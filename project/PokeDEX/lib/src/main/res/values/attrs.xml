<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- PokeTextView attributes -->
	<declare-styleable name="PokeTextView">
		<!-- The stroke attributes -->
		<attr name="strokeWidth" format="dimension" />
		<attr name="strokeColor" format="color" />
		<!-- The typeface attributes -->
		<attr name="typeface" format="string|reference" />
	</declare-styleable>

	<!-- TileImageView attributes -->
	<declare-styleable name="TileImageView">
		<!-- The offset inside the pattern -->
		<attr name="offsetX" format="dimension" />
		<attr name="offsetY" format="dimension" />
		<!-- The scale of the bitmap and the drawing scale -->
		<attr name="scaleBitmap" format="float" />
		<attr name="scaleDraw" format="float" />
		<!-- The tiling modes of both axis -->
		<attr name="tileModeX" format="enum">
			<enum name="clamp" value="0" />
			<enum name="repeat" value="1" />
			<enum name="mirror" value="2" />
		</attr>
		<attr name="tileModeY" format="enum">
			<enum name="clamp" value="0" />
			<enum name="repeat" value="1" />
			<enum name="mirror" value="2" />
		</attr>
	</declare-styleable>
</resources>
