<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
												   xmlns:app="http://schemas.android.com/apk/res-auto"
												   xmlns:tools="http://schemas.android.com/tools"
												   android:layout_width="match_parent"
												   android:layout_height="match_parent"
												   tools:context=".app.PokeListActivity">

	<!-- The background image pattern -->
	<org.egasato.pokedex.lib.widget.TileImageView
		android:id="@+id/background"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:alpha="0.5"
		android:background="@color/pokemon_pattern_starters_background"
		android:src="@drawable/pokemon_pattern_starters"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:scaleBitmap="5"
		app:scaleDraw="0.4" />

	<!-- The list of PokÃ©mon -->
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/list"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:spanCount="2" />

</androidx.constraintlayout.widget.ConstraintLayout>
