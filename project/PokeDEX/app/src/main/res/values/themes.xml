<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Splash screen theme -->
	<style name="Theme.PokeDEX.NoActionBar" parent="Theme.MaterialComponents.NoActionBar" />
	<style name="Base.Theme.PokeDEX.Splash" parent="Theme.PokeDEX.NoActionBar">
		<item name="android:windowBackground">@drawable/splash_background</item>
	</style>
	<style name="Theme.PokeDEX.Splash" parent="Base.Theme.PokeDEX.Splash" />

	<!-- The style of the ActionBar -->
	<style name="ThemeOverlay.PokeDEX.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
		<item name="android:background">?attr/colorPrimary</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minHeight">?attr/actionBarSize</item>
		<item name="android:textSize">20sp</item>
		<item name="elevation">4dp</item>
		<item name="contentInsetStart">0dp</item>
		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
	</style>

	<!-- The PokÃ©DEX theme -->
	<style name="Theme.PokeDEX" parent="Theme.MaterialComponents.Light.DarkActionBar">
		<!-- Primary brand -->
		<item name="colorPrimary">@color/red_500</item>
		<item name="colorPrimaryDark">@color/red_900</item>
		<item name="colorPrimaryVariant">@color/red_700</item>
		<item name="colorOnPrimary">@color/red_text_light</item>
		<!-- Secondary brand -->
		<item name="colorSecondary">@color/light_yellow_500</item>
		<item name="colorSecondaryVariant">@color/light_yellow_700</item>
		<item name="colorOnSecondary">@color/light_yellow_text_dark</item>
		<!-- Bars -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
	</style>
</resources>
